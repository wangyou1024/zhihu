<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MessageFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tl:tabIndicatorColor="@color/message_tl_line"
        tl:tabSelectedTextColor="@color/message_tl_selected_text_color"
        tl:tabTextColor="@color/message_tl_text_color"
        tl:tabIndicatorFullWidth="false"
        tl:tabIndicatorHeight="3dp"
        >

    </com.google.android.material.tabs.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/color_change"
        ></View>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>