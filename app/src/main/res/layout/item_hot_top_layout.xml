<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tv_hot_top_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginRight="4dp"
        android:text="1"
        android:textSize="@dimen/text_first"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_hot_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/first"
            android:textSize="@dimen/text_first"
            android:textStyle="bold"
            android:text="如何看待越来越多年轻人追捧[摸鱼哲学]，拒绝努力的年轻人真比老一辈活得更通透吗？"/>
        <TextView
            android:id="@+id/tv_hot_top_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4374万热度"
            android:textSize="@dimen/text_second"
            android:textColor="@color/three"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_hot_top_image"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape_search" />
</LinearLayout>