<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".fragment.MyFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mybg"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/ll_home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_filter_center_focus_24" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#3b84f6"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_baseline_search_24" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="搜索知乎内容"
                    android:textColor="@color/first"
                    android:textColorHint="#90c0f9"
                    android:textSize="@dimen/text_first" />
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_outline_brightness_2_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_outline_settings_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/my_bgshape"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart='true'>

                    <ImageView
                        android:id="@+id/iv_concern_header"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@mipmap/header" />

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="17dp"
                        android:layout_marginLeft="@dimen/text_first"
                        android:layout_toEndOf="@+id/iv_concern_header"
                        android:layout_toRightOf="@id/iv_concern_header"
                        android:text="香菜"
                        android:textColor="@color/first"
                        android:textSize="@dimen/text_seven" />

                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="个人主页>" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom='true'
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/create"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="未开通"
                            android:textColor="@color/sex"
                            android:textSize="@dimen/text_seven" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/create"
                            android:layout_centerHorizontal="true"
                            android:text="创作中心"
                            android:textColor="@color/three"
                            android:textSize="@dimen/text_first" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#000000" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/attention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="125"
                            android:textColor="@color/first"
                            android:textSize="@dimen/text_seven" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/attention"
                            android:layout_centerHorizontal="true"
                            android:text="关注"
                            android:textColor="@color/three"
                            android:textSize="@dimen/text_first" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#000000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="4"
                            android:textColor="@color/first"
                            android:textSize="@dimen/text_seven" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/like"
                            android:layout_centerHorizontal="true"
                            android:text="收藏夹"
                            android:textColor="@color/three"
                            android:textSize="@dimen/text_first" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#000000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/watch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="25"
                            android:textColor="@color/first"
                            android:textSize="@dimen/text_seven" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/watch"
                            android:layout_centerHorizontal="true"
                            android:text="最近浏览"
                            android:textColor="@color/three"
                            android:textSize="@dimen/text_first" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="我的卡片"
            android:textColor="@color/first"
            android:textSize="@dimen/text_eight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_sex"
                android:background="@color/white"
                android:padding="@dimen/text_eight">

                <ImageView
                    android:id="@+id/create_png"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/create_center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/create_png"
                    android:text="创作中心"
                    android:textColor="@color/first"
                    android:textSize="@dimen/text_first" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="有新收益待开启"
                    android:textColor="@color/three" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/create_png"
                    android:layout_marginTop="@dimen/text_eight"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/readed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="昨日被阅读数"
                            android:textColor="@color/four"
                            android:textSize="@dimen/text_second" />

                        <TextView
                            android:id="@+id/readNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/readed"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="@color/five"
                            android:textSize="@dimen/text_first" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/readNum"
                            android:layout_centerHorizontal="true"
                            android:text="较前日--"
                            android:textColor="@color/four"
                            android:textSize="@dimen/text_second" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/liked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="昨日获赞数"
                            android:textColor="@color/four"
                            android:textSize="@dimen/text_second" />

                        <TextView
                            android:id="@+id/likedNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/liked"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="@color/five"
                            android:textSize="@dimen/text_first" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/likedNum"
                            android:layout_centerHorizontal="true"
                            android:text="较前日--"
                            android:textColor="@color/four"
                            android:textSize="@dimen/text_second" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_sex"
                android:background="@color/white"
                android:padding="@dimen/text_eight">

                <ImageView
                    android:id="@+id/answer_png"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/answer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/answer_png"
                    android:text="回答问题"
                    android:textColor="@color/first"
                    android:textSize="@dimen/text_first" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="更多问题"
                    android:textColor="@color/three" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/answer_png"
                    android:layout_marginTop="@dimen/text_eight"
                    android:background="@drawable/my_answer_shape">

                    <TextView
                        android:id="@+id/my_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="同样的价格，你会选择电子书还是纸质书？"
                        android:textColor="@color/first"
                        android:textSize="@dimen/text_first" />

                    <TextView
                        android:id="@+id/question_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_question"
                        android:layout_marginTop="@dimen/text_seven"
                        android:text="6804关注" />

                    <Button
                        android:id="@+id/ignore"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_question"
                        android:layout_alignBottom="@id/question_attention"
                        android:layout_marginTop="@dimen/text_seven"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/answer"
                        android:background="@color/ignore"
                        android:text="忽略"
                        android:textColor="@color/seven" />

                    <Button
                        android:id="@+id/answer"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_question"
                        android:layout_alignRight="@id/my_question"
                        android:layout_alignBottom="@id/question_attention"
                        android:layout_marginTop="@dimen/text_seven"
                        android:background="@color/answer"
                        android:text="回答"
                        android:textColor="@color/sex" />


                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_sex"
                android:background="@color/white"
                android:padding="@dimen/text_eight">

                <ImageView
                    android:id="@+id/my_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/my_circle"
                    android:text="你可能感兴趣的圈子"
                    android:textColor="@color/first"
                    android:textSize="@dimen/text_first" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="去圈子广场"
                    android:textColor="@color/three" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_circle"
                        android:layout_marginTop="@dimen/text_eight"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/circle1"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@mipmap/avatar"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/circle1"
                                android:text="摄影暗房" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/circle2"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@mipmap/avatar"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/circle2"
                                android:layout_centerHorizontal="true"
                                android:text="摄影" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/circle3"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@mipmap/avatar"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/circle3"
                                android:layout_centerHorizontal="true"
                                android:text="摄影" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/circle4"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@mipmap/avatar"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/circle4"
                                android:layout_centerHorizontal="true"
                                android:text="摄影" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:layout_margin="10dp">

                            <ImageView
                                android:id="@+id/circle5"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@mipmap/avatar"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/circle5"
                                android:layout_centerHorizontal="true"
                                android:text="摄影" />

                        </RelativeLayout>


                    </LinearLayout>
                </HorizontalScrollView>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</ScrollView>