<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/tv_recommend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="这是测试标题"
        android:textColor="@color/first"
        android:textSize="@dimen/text_first"
        android:textStyle="bold"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_recommend_header"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/searcher" />

                <TextView
                    android:id="@+id/tv_recommend_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="测试者"
                    android:textSize="@dimen/text_three"
                    android:textStyle="bold"
                    android:textColor="@color/second" />

                <TextView
                    android:id="@+id/tv_recommend_concern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有好多好多人关注"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/three" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_recommend_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/first"
                android:textSize="@dimen/text_three"
                android:text="大学时期时间相对充裕，在认真学习本专业的同时，学习更多的技能也是十分必要,学习更多的技能也是十分必要"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_recommend_image"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_search" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_recommend_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/three"
            android:text="10.1万" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/three"
            android:textSize="@dimen/text_three"
            android:text="赞同   " />

        <TextView
            android:id="@+id/tv_recommend_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/three"
            android:textSize="@dimen/text_three"
            android:text="204" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/three"
            android:textSize="@dimen/text_three"
            android:text="评论 " />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/three"
            android:textSize="@dimen/text_three"
            android:text="..." />
    </LinearLayout>
</LinearLayout>